@page "/product/{ProductId}"


<!--MainContent-->
<div id="MainContent" class="main-content" role="main">
    <div id="ProductSection-product-template" class="product-template__container prstyle2 container">
        <!--#ProductSection-product-template-->
        <div class="product-single product-single-1">
            <div class="row py-5">
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="product-details-img product-single__photos bottom">
                        <div class="zoompro-wrap product-zoom-right pl-20">
                            <div class="zoompro-span">
                                <img class="blur-up lazyload zoompro" data-zoom-image="@_syrup.Image" alt="" src="@_syrup.Image" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <div class="product-single__meta">
                        <h1 class="product-single__title">@_syrup.Name</h1>
                        <div class="prInfoRow">
                            <div class="product-stock"> <span class="instock @(_syrup.Stock <= 0 ? "hide" : string.Empty)">In Stock</span> <span class="outstock @(_syrup.Stock > 0 ? "hide" : string.Empty)">Unavailable</span> </div>
                            <div class="product-sku">Type: <span class="variant-sku">@_syrup.Type.ToString()</span></div>
                        </div>
                        <p class="product-single__price product-single__price-product-template">
                            <span class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                <span id="ProductPrice-product-template"><span class="money">$@_syrup.Price</span></span>
                            </span>
                        </p>
                        <div class="product-single__description rte">
                            <p>@_syrup.Description</p>
                        </div>
                        <form method="post" id="product_form_10508262282" accept-charset="UTF-8" class="product-form product-form-product-template hidedropdown" enctype="multipart/form-data">
                            <!-- Product Action -->
                            <div class="product-action clearfix">
                                <div class="product-form__item--quantity">
                                    <div class="wrapQtyBtn">
                                        <div class="qtyField">
                                            <a class="qtyBtn minus" @onclick:preventDefault @onclick:stopPropagation @onclick="() => ChangeQuantity(false)"><i class="fa anm anm-minus-r" aria-hidden="true"></i></a>
                                            <input type="text" id="Quantity" name="quantity" value="@_quantity" class="product-form__input qty">
                                            <a class="qtyBtn plus" @onclick:preventDefault @onclick:stopPropagation @onclick="() => ChangeQuantity(true)"><i class="fa anm anm-plus-r" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-form__item--submit">
                                    <button type="button" @onclick:preventDefault @onclick:stopPropagation @onclick="AddToCartAsync" name="add" class="btn product-form__cart-submit">
                                        <span>Add to cart</span>
                                    </button>
                                </div>
                            </div>
                            <!-- End Product Action -->
                        </form>
                    </div>
                </div>
            </div>
            <!--End-product-single-->
            <!--Related Product Slider-->
            <div class="related-product grid-products py-5">
                <header class="section-header">
                    <h2 class="section-header__title text-center h2"><span>Related Products</span></h2>
                </header>
                <CatalogList CatalogItems="@_sameTypeSyrups" />
            </div>
            <!--End Related Product Slider-->
        </div>
        <!--#ProductSection-product-template-->
    </div>
    <!--MainContent-->
</div>